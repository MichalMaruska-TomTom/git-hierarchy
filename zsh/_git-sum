#compdef git-sum
#description manage Sums of a git-hierarchy

_git_sum() {
    # fixme: necessara?
    local curcontext="$curcontext" state line
    typeset -A opt_args

    _arguments : \
	'-h[help]'  \
	'-d[Sum to drop]:sum:_git-sum-name' \
	'1: :->sum' \
	'*: :->git_segment_name' && return 0

    case $state in
	sum)
	    _git-sum-name
	    ;;
	git_segment_name)
	    _git-segment-name
	    # _arguments "1:Segments:($available)"
	    ;;
    esac
}


_git_sum "$@"
