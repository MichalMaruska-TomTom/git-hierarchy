#!/usr/bin/zsh -feu


expand_ref()
{
    name=$1
    case $name in
	refs/*)
	    ;;
	heads/*)
	    name=refs/$name
	    ;;
	remotes/*)
	    name=refs/$name
	    ;;
	tags/*)
	    name=refs/$name
	    ;;
	*/*)
	    name=refs/$name
	    ;;
	*)
	    name=refs/heads/$name
	    # prepend refs/
    esac

    echo $name
}


expand_ref $1
